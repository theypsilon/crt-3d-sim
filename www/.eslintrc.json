{
    "extends": "semistandard",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "browser": true,
        "mocha": true
    },
    "rules": {
        "indent": ["error", 4],
        "eol-last": "off",
        "no-trailing-spaces": "off"
    }
}